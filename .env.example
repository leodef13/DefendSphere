# DefendSphere Environment Configuration

# Backend Configuration
NODE_ENV=development
PORT=5000
REDIS_URL=redis://redis:6379
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=DefendSphere
VITE_APP_VERSION=1.0.0

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# Multi-language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
ADMIN_EMAIL=admin@defendsphere.com

# Default Users
USER1_USERNAME=user1
USER1_PASSWORD=user1
USER1_EMAIL=user1@defendsphere.com

USER2_USERNAME=user2
USER2_PASSWORD=user2
USER2_EMAIL=user2@defendsphere.com